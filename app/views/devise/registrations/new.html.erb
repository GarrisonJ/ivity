<body id="image-background">
<h2 id="reg-sign-up">Sign up</h2>
<div class="row-fluid">

  <div class="span12">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="row-fluid">
        <div class ="span5">
          <div class="well">
            <%= f.input :profile_name %>
          </div>
        </div>
        <div class="span5">
          <div class="well">
            <%= f.input :email %>
          </div>
          <div class="well">
            <%= f.input :password %>
            <%= f.input :password_confirmation %>
          </div>
        </div>
      </div>
      <div class="row-fluid">
      <div class="form-actions span10">
        <%= f.button :submit, 'Sign up'%>
      </div>
    </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
</body>
<a id="background-cite" href="http://www.flickr.com/photos/rayterrill/6440299257/">Image: Ray Terrill</a>
