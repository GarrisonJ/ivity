<body id="image-background">
<h2 id="reg-sign-up">Sign up</h2>
<div class="row-fluid">

  <div class="span12">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="row-fluid">
        <div class ="span4">
          <div class="well">
            <%= f.input :profile_name %>
            <%= f.input :email %>
            <%= f.input :password %>
            <div class="form-actions">
              <%= f.button :submit, 'Sign up'%>
            </div>
          </div>
         </div>
      </div>

    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
</body>
<a id="background-cite" href="http://www.flickr.com/photos/rayterrill/6440299257/">Image: Ray Terrill</a>
