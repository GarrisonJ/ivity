

<% if current_user %>
	<% if favorite = current_user.favorites.find_by_happening_id(@happening.id) %>
		<%= simple_form_for favorite, :html => { :method => :delete }, :remote => true do |f| %>
			<%= f.button :submit, "Never mind, I can't make it." %>
		<% end %>
	<% else %>
		<%= simple_form_for current_user.favorites.build(:happening_id => @happening.id), :remote => true do |f| %>
			<%= f.hidden_field :happening_id %>
			<%= f.hidden_field :user_id %>
			<%= f.button :submit, "I'll be there!" %>
		<% end %>
	<% end %>
<% end %>