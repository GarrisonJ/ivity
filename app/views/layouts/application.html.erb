<!DOCTYPE html>
<html>
<head>
  <title>Ivity</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<a><%= link_to "Ivity.it", feed_path , :class => 'brand' %></a>
				<form class="navbar-search pull-left">
  					<input class="search-query" id="tag" name="tag" type="text" placeholder="Search Tags">
				</form>
				<ul class="nav pull-right">
					<li><button type="submit" class="btn pull-right"><%= link_to "Post New Happening", new_happening_path %></button></li>
					<li><a></a></li>
					<% if user_signed_in? %>
						<li><div class="btn-group">
						  <a class="btn btn-primary" href="<%="/"+current_user.profile_name%>"><%= current_user.full_name %></a>
						  <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
						  <ul class="dropdown-menu">
					    	<li><%= link_to "Profile", "/"+current_user.profile_name %></li>
					    	<li><%= link_to "Settings", edit_user_registration_path %></li>
					    	<li><%= link_to "Log out", logout_path %></li>
					  	  </ul>
						</div></li>
  					<% else %>
  						<li><%= link_to "Register", register_path %></li>
  						<li><%= link_to "Sign in", login_path %></li>
  					<% end %>
  				</ul>
			</div>
		</div>
	</div>
	<div class="container">
		<% flash.each do |type, message| %>
			<div class="alert <%= flash_class type %>">
				<button class="close" data-dismiss="alert">x</button>
			<%= message %>
			</div>
		<% end %>

		<%= yield %>
	</div>

</body>
</html>
