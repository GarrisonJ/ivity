<%= simple_form_for(@happening) do |f| %>
  <% if @happening.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@happening.errors.count, "error") %> prohibited this happening from being saved:</h2>

      <ul>
      <% @happening.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="span12">
    <div class="row">
      <div class="span3"><%= f.input :title %></div>
      <div class="span3"><%= f.input :tag_list, :placeholder => "Seperate tags with commas \",\"" %></div>
      <div class="span3"><%= f.input :website %></div>
      <div class="span3"><%= f.input :address %></div>
    </div>
  </div>

  <div class="span3"><%= f.input :content, :label => "Description", :as => :text, :input_html => { :rows => 5 } %></div>

  <div class="span6">
    <label>Date range</label>
     <div class="input-append" id="happeing" data-date-format="dd-mm-yyyy">
        <input class="datepicker" size="16" type="text" value="Start Date" data="time_of" name="happening[time_of]">
        <%= f.time_select :time_of, :minute_step => 15, :ampm => :true %>
     </div>
        to
     <div class="input-append" id="happeing" data-date-format="dd-mm-yyyy">
        <input class="datepicker" size="16" type="text" value="Start Date" data="end_time" name="happening[end_time]">
        <%= f.time_select :end_time, :minute_step => 15, :ampm => :true %>
     </div>
  </div> 
</div>


  <div class="form-actions">
  <%= f.button :submit %>
  </div>
<% end %>

<script type="text/javascript">
$('.datepicker').datepicker()
</script>