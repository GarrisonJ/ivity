<%= simple_form_for(@happening) do |f| %>
  <% if @happening.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@happening.errors.count, "error") %> prohibited this happening from being saved:</h2>

      <ul>
      <% @happening.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="span12">
    <div class="row">
      <div class="span3"><%= f.input :title %></div>
      <div class="span3"><%= f.input :tag_list, :placeholder => "Seperate tags with commas \",\"" %></div>
      <div class="span3"><%= f.input :website %></div>
      <div class="span3"><%= f.input :address %></div>
    </div>
  </div>

  <div class="span3"><%= f.input :content, :label => "Description", :as => :text, :input_html => { :rows => 5 } %></div>

  <div class="span6">
    <label>Date range</label>
    <div>
      <%= f.text_field :time_of, :class=>"datepicker" %> 
    </div>to
    <div>
      <%= f.text_field :end_time, :class=>"datepicker" %> 
    </div>
  </div> 
</div>


  <div class="form-actions">
  <%= f.button :submit %>
  </div>
<% end %>

<script type="text/javascript">
$(".datepicker").datepicker({
    noDefault: false, // set this to true if you don't want the current date inserted if the value-attribute is empty
    format: 'mm/dd/yyyy hh:ii:ss',
    weekStart: 1,
    days: ["Sun","Mon","Tus","Wed","Thu","Fri","Sat"],
    months: ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]
});
</script>