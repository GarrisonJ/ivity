<div class="page-header">
 <h1>Happenings</h1>
</div>
<% @happenings.each do |happening, json| %>
<div class="accordion">
 <div class="accordion-group">
  <div class="accordion-heading">
   <a class="accordion-toggle" data-toggle="collapse" href="#collapse<%=happening.id%>">
    <div class="row">
     <p class="muted pull-right">Created by: <%= happening.user.full_name %></p>
     <strong class="pull-left span3"><%= happening.title %></strong>
     <p class="pull-left text-info span6"><%= happening.content %></p>
     </div>
   </a>
  </div>
  <div id="collapse<%=happening.id%>" class="accordion-body collapse">
   <div class="accordion-inner">
    <div class="happening">
     <p><b>What: </b><%= happening.content %></p>
     <p><b>Where: </b> <%= happening.address %></p>
     <p><b>When: </b> <%= distance_of_time_in_words( Time.now, happening.time_of) %></p>
     <div class="meta">
      <%= link_to time_ago_in_words(happening.created_at) + " ago", happening %>
      <span class="admin">
       | <%= link_to "Edit", edit_happening_path(happening) %> |
        <%= link_to 'Delete', happening, :confirm => 'Are you sure?', :method => :delete %>
      </span>
     </div>
    </div>
   </div>
  </div>
 </div>
</div>
<% end %>

